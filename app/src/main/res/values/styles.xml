<resources>

    <!-- TAB低导样式 -->
    <style name="TabNav">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_main_font_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!-- ListView样式 -->
    <style name="MListView">
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
    </style>

    <!-- GrideView样式 -->
    <style name="MGridView">
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
    </style>

    <!-- 定制进度等待 -->
    <style name="common_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- 重写系统弹出Dialog -->
    <style name="KDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 除去title -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 除去背景色 -->
    </style>

    <!-- 横线 -->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">#cccccc</item>
    </style>

    <!-- 竖线 -->
    <style name="LineVertical">
        <item name="android:layout_width">0.3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#cccccc</item>
    </style>

    <!-- 竖线深 -->
    <style name="LineVerticalDrak">
        <item name="android:layout_width">0.3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- 右箭头 -->
    <style name="ArrowRight">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:background">@mipmap/ic_launcher</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

